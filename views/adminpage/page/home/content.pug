script.
    $('.pagination li').click(function(){
        var index = $(this).index();
        var limit = 3;
        var offset = index*limit
        if(index==0||index==8){
            return
        }
        console.log(offset)
        getList(limit, offset)
    })
    function getList(limit, offset){
        $.ajax({
            url:'/admin',
            type:'post',
            data:{
                limit: limit,
                offset: offset
            },
            dataType:'json'
        }).done(function(ret){
            console.log(ret)
        })
    }
